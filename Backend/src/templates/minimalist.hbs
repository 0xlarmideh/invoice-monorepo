<html lang="en">

<head>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800&display=swap"
    rel="stylesheet" />
  <link rel="stylesheet" href={{tailwindcss}} />
  {{!-- <link rel="stylesheet" href="/src/public/styles/styles.css"/> --}}
</head>

<body>
  <div class="p-10 h-full">
    <div style="display: flex; flex-direction: column; justify-content: space-between;">
    <div>
      <div class="grid gap-4 grid-cols-[2fr,1.2fr] mb-8">
        <div class="rounded-[20px] relative overflow-hidden bg-[#3362CC] flex items-center h-full">
          <div class="text-white p-8">
            <p class="text-[18px] mb-[6px] font-[600]">
              {{recipientName}}
            </p>
            <p class="text-[10px] mb-[6px] leading-[10px]">{{recipientEmail}}</p>
            <p class="text-[10px] leading-[14px]">
              {{billFrom}}
            </p>
          </div>
          <div class="absolute right-0 top-0">
            <img src={{bluesvgBiggest}} alt="svg" />
          </div>
          <div class="absolute right-0 bottom-0">
            <img src={{bluesvgBig}} alt="svg" />
          </div>
          <div class="absolute left-0 bottom-0">
            <img src={{bluesvgSmall}} alt="svg" />
          </div>
        </div>
        <div class="rounded-[20px] bg-[#EBEFF6] p-4">
          <div style="
              box-shadow: 0px 1px 3px 0px rgba(25, 33, 61, 0.05),
                0px 2px 8px 0px rgba(25, 33, 61, 0.04);
            " class="p-3 bg-[#fff] rounded-[10px] mb-4">
            <p class="text-[8px] text-[#868DA6]">AMOUNT DUE</p>
            <p class="text-[24px] font-[600] text-[#19213D]">{{currency}}
              {{totalAmount}}
            </p>
            <p class="text-[8px] text-[#868DA6]">
              {{dateFormat issuedOn "MMMM D, YYYY"}}
            </p>
          </div>
          <div>
            <p class="text-[8px] mb-[6px] text-[#868DA6]">INVOICE TO:</p>
            <p class="text-[14px] mb-[6px] font-[600] text-[#19213D]">
              {{clientName}}
            </p>
            <p class="text-[10px] mb-[6px] text-[#868DA6] leading-[10px]">
              {{clientEmail}}
            </p>
            <p class="text-[10px] text-[#868DA6] leading-[14px]">
              {{billTo}}
            </p>
          </div>
        </div>
      </div>
      <!-- Invoice Details -->
      <div>
        <p class="ml-4 text-[12px] mb-1 text-[#868DA6]">INVOICE DETAILS</p>
        <div class="flex justify-between p-4 rounded-[10px]" style="
            border: 0.6px solid #ebeff6;
            box-shadow: 0px 1px 3px 0px rgba(25, 33, 61, 0.05),
              0px 2px 8px 0px rgba(25, 33, 61, 0.04);
          ">
          <div>
            <p class="text-[10px] mb-1 text-[#868DA6]">INVOICE NUMBER</p>
            <p class="text-[12px] font-[600] text-[#19213D]">{{invoiceNumber}}</p>
          </div>
          <div>
            <p class="text-[10px] mb-1 text-[#868DA6]">ISSUED</p>
            <p class="text-[12px] font-[600] text-[#19213D]">{{dateFormat
              issuedOn
              "MMMM D, YYYY"
              }}
            </p>
          </div>
          <div>
            <p class="text-[10px] mb-1 text-[#868DA6]">DUE DATE</p>
            <p class="text-[12px] font-[600] text-[#19213D]">{{dateFormat
              dueOn
              "MMMM D, YYYY"
              }}
            </p>
          </div>
        </div>
      </div>
      <div class="mt-6">
        <table class="mb-[54px] min-w-full">
          <thead>
            <tr class="">
              <th scope="col" class="py-3 px-4 text-[#868DA6] text-left text-[12px] font-[500]">
                DESCRIPTION
              </th>
              <th scope="col" class="py-3 px-4 text-[#868DA6] text-left text-[12px] font-[500]">
                QTY
              </th>
              <th scope="col" class="py-3 px-4 text-[#868DA6] text-left text-[12px] font-[500]">
                PRICE
              </th>
              <th scope="col" class="py-3 px-4 text-[#868DA6] text-left text-[12px] font-[500]">
                TOTAL
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each items as |item|}}
            <tr style="border-bottom: 0.6px solid #ebeff6; background-color:#ebeff6; {{#if (isFirst index)}}border-radius: 16px 16px 0 0{{/if}} {{#if (isLast index items)}} rounded-b-[16px]{{/if}};"
              >
        
              <td
                class="text-[#5D6481] text-[12px] font-[600] p-4">
                {{item.item}}
              </td>
              <td class="text-[#5D6481] text-[12px] font-[600] p-4">
                {{item.quantity}}
              </td>
              <td class="text-[#5D6481] text-[12px] font-[600] p-4">
                {{item.price}}
              </td>
              <td class="text-[#5D6481] text-[12px] font-[600] p-4">{{currency}} {{item.totalPrice}}</td>
      
            </tr>
            {{/each}}
          </tbody>
        </table>

        <div class="flex mb-8 justify-end">
          <div>
            <p class="text-right text-[#868DA6] text-[10px]">TOTAL AMOUNT</p>
            <p class="text-[24px] text-[#3362CC] font-bold">{{ currency }} {{totalAmount}} </p>
          </div>
        </div>
      </div>
    </div>
   </div>
  </div>
</body>

</html>